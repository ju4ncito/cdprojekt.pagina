<ul class="list-group">

        <% console.log(cart) %>

        <% if (req.session.cart) {
                for (let i = 0; i < cart.quantity; i++) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
        PRODUCTO: <%- cart.products[i].name %>
        <span class="badge bg-dark rounded-pill">
          CANT: <%-  cart.products[i].cant %>
        </span>
    </li>
    <h1><%- cart.total%></h1>
                    <%} }%>
</ul>
<br>
