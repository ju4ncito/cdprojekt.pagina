<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <h3>
        <a class="navbar-brand" href="/"><i class="bi bi-currency-bitcoin"></i> ONE RIG</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        </h3>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <% if (req.session.user && req.session.user.type === 'admin') { %>

                    <li class="nav-item">
                        <a class="nav-link "><%= req.session.user.name %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/add_product">AÃ±adir producto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/logout">Logout</a>
                    </li>
                <% }else{ %>
                        <% if (req.session.user) { %>
                            <li class="nav-item">
                                <a class="nav-link "><%= req.session.user.name %></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/logout">Logout</a>
                            </li>
                            <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link active" href="/login">Login</a>
                    </li>
                            <% } %>
                <% } %>
                    <li class="nav-item">
                        <% if (req.session.user && req.session.user.type === 'admin') { %>
                                <a class="nav-link active " href="/product">Productos agregados</a>
                            <% }else{ %>
                                <a class="nav-link active me-3" href="/product">RIGS y tarjetas</a>
                            <% } %>
                    </li>


            </ul>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <% if (!(req.session.user && req.session.user.type === 'user')) { %>
            <li class="nav-item">
                <a class="nav-link active me-3 text-white bg-dark" href="/shoppingcart">
                    <%if (req.session.cart){%>
                        <%- req.session.cart.products.length %>
                    <%}%>
                    <i class="bi bi-cart-fill"></i>
                    Mi carrito</a>
            </li>
            <% } %>
            </ul>

        </div>


</nav>
<div class="container">
    <main class="my-5">
<%- body %>
        </main>
</div>
</body>
